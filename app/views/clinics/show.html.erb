<div class="banner d-flex align-items-center justify-content-around">
	  <div class="container">
	    <h1> <%= @clinic.name %></h1>
	    <h4> <%= @clinic.description %></h4>
	    <p> Specialities:  </p>
	    <ul>
	    <li> <%= @clinic.specialities %> </li>
	    </ul>
	    <p> Open hours: </p>
	    <p> <%= @clinic.open_hours %> </p>
	    <%= link_to 'book', clinics_path, class: 'btn btn-primary m-1' %>
	  </div>
	<div class="container m-3">
		<div class="card m-1" style="height: 500px; background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @clinic.photo.key%>');">
			
		</div>
	</div>
</div>
<div class="container">
	<div class="container d-flex justify-content-between">
		<h2 class="p-1"> Reviews: </h2>
		<%= link_to 'create review', clinics_path, class: 'btn btn-primary' %>
	</div>
			<ul>
				<% if @clinic.reviews.any? %>
					<% @clinic.reviews.each do |review| %>
						<div class="container d-flex justify-content-between">
						<li><%= review.created_at %> - <%= review.rating %></li>
						<li><%= review.content %></li>
						</div>
					<% end %>
				<% end %>
			</ul>
</div>