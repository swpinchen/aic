<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>	       
<div class="p-3">
  <div class="container d-flex">
  	<div class='card p-5' style="width: 50%;">
			<h1 class="text-center p-1" ><%= @clinic.name %></h1>
			<h4> <%= @clinic.description %></h4>
			<p> Specialities:  </p>
			<ul>
			 <li> <%= @clinic.specialities %> </li>
			</ul>
      <p><%=@clinic.language_list%></p>
			<div class="container">
			</div>
			<%= link_to 'Book now!', new_clinic_booking_path(@clinic), class: 'btn btn-primary btn-block m-1' %>
			<%= link_to 'Edit', edit_clinic_path(@clinic), class: 'btn btn-danger btn-block m-1' %>
		</div>
	  <div class="card m-1" style="height: 400px; width: 50%; background-size: cover; background-image: url('<%= cl_image_path @clinic.photo.key%>');">
	  </div>
	
  </div>
</div>
<div class="container">
  <div class="container">
    <h2 class="text-center p-3"> - Reviews - </h2>
  	<%= link_to 'Leave a review', new_clinic_review_path(@clinic), class: 'btn-outline-secondary m-3' %>
  </div>
  <% if @clinic.reviews.any? %>
    <% @clinic.reviews.each do |review| %>
      <div class="card p-3">
	    <div class="d-flex">
          <% review.rating.times do %>
		    <i class="fas fa-star"></i>
		  <%end%>
		</div>
        <%= review.content %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="container">
  <h2 class="text-center mt-3">- Location -</h2>
  <div id="map"
     style="width: 100%; height: 500px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>